        'nome' => $nome,
        'descricao' => $descricao,
        'preco' => (float)$preco,
        'estoque' => (int)$estoque,
        'foto' => $foto,
        'atributo_1' => $atributo_1,
        'atributo_2' => $atributo_2,
        'atributo_3' => $atributo_3,
